<binding>
  <mapping name="customer" class="example2.Customer">
    <structure name="person" field="person"
        value-style="attribute">
      <value name="cust-num" get-method="getNumber"
        set-method="setNumber"/>
      <value name="first-name" field="firstName"/>
      <value style="text" field="lastName"/>
    </structure>
    <value name="street" field="street"/>
    <value name="city" field="city"/>
    <value name="state" field="state"/>
    <value name="zip" usage="optional"
      field="zip" type="java.lang.Integer"/>
    <value name="phone" field="phone"
      set-method="setPhone"/>
  </mapping>
</binding>
