<!-- collection of nillable objects via mapping -->
<binding>
  <mapping name="customer" class="simple.Customer4" nillable="true">
    <structure name="name" ordered="false" field="name">
      <value name="first-name" field="firstName" usage="optional"/>
      <value name="last-name" field="lastName" usage="optional"/>
    </structure>
    <value name="street1" field="street1"/>
    <value name="city" field="city"/>
    <value name="state" field="state"/>
    <value name="zip" field="zip"/>
    <value name="phone" field="phone"/>
    <collection usage="optional" field="referrals" item-type="simple.Customer4"/>
  </mapping>
</binding>
